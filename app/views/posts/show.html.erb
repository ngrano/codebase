<article>
  <header>
    <h1><%= @post.title %></h1>
  </header>
  <div class="article_content">
    <p>
      <%= markup @post.body, @post.markup %>
    </p>
  </div>

  <div class="article_controls">
    <%= link_to 'Kommentoi', new_post_comment_path(@post)%> |
    <%= link_to 'Muokkaa', edit_post_path(@post) %> | 
    <%= link_to 'Takaisin', root_path %>
  </div>
</article>

<article>
  <header>
    <h1>Kommentit</h1>
  </header>
  <div class="article_content">
    <p>    
      <%= render @post.comments %> 
    </p>
  </div>
</article>
