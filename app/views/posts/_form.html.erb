<%= form_for(@post) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :Otsikko %><br />
    <%= f.text_field :title, :size => 50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :Sisältö %><br />
    <%= f.text_area :body, :cols => 93 %>  </div>
  <div class="actions">
    <%= f.submit t('save') %>
  </div>
<% end %>
