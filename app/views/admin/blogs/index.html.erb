<article>
  <header>
    <h1>Blogit</h1>
  </header>
  
  <div class="article_content">
    <p><%= link_to "Lisää uusi blogi", new_admin_blog_path %></p>
    
    <% for blog in @blogs %>
      <p>
        <%= blog.name %> <%= link_to 'Poista', [:admin, blog], :method => :delete, :confirm => 'Oletko varma?' %>
      </p>
    <% end -%>
  </div>
</article>