<% @posts.each do |post| %>
      <article>
        <header><h1><%= link_to post.title, [post.blog, post] %></h1></header>
        <div class="article_content">
          <p>
            <%= markup post.body, post.markup %>
          </p>
        </div>
        <div class="article_controls">
          <%= link_to 'Kommentoi', new_blog_post_comment_path(post.blog, post) %>
        </div>
      </article><br /><br />
<% end %>
