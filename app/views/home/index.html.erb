<% @posts.each do |post| %>
      <article>
        <header><h1><%= link_to post.title, post_path(post) %></h1></header>
        <div class="article_content">
          <p>
            <%= post.body %>
          </p>
          <br />
          <%= link_to 'Kommentoi', new_post_comment_path(post)%>
        </div>
      </article><br /><br />
<% end %>
